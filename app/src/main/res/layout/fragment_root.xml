<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_c"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_base"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bnv_nav"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dart_blue_c"
        app:itemBackground="@color/dart_blue_c"
        app:itemIconTint="@color/t_c"
        app:itemTextColor="@color/t_c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/buttons" />
</androidx.constraintlayout.widget.ConstraintLayout>